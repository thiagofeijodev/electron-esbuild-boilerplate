{
  "name": "@thiagofeijodev/electron-boilerplate-app",
  "scripts": {
    "start": "npm-run-all -p start:main start:renderer",
    "start:main": "cd main && bun start",
    "start:renderer": "cd renderer && bun start",
    "watch": "npm-run-all -p watch:main start:renderer",
    "watch:main": "cd main && bun watch",
    "build": "npm-run-all build:renderer build:main build:electron",
    "build:renderer": "cd renderer && bun run build",
    "build:main": "cd main && bun run build",
    "build:electron": "cd main && bun run electron:build",
    "install:main": "cd ./main && bun install",
    "install:renderer": "cd ./renderer && bun install",
    "postinstall": "bun run install:main && bun run install:renderer",
    "lint": "eslint . --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "lint:fix": "eslint . --fix --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "lint:main": "eslint main/ --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "lint:renderer": "eslint renderer/ --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "npm-run-all": "^4.1.5"
  }
}
